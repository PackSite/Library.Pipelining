<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net5.0;netstandard2.1</TargetFrameworks>
    <Authors>$(Company)</Authors>
    <Description>PackSite items</Description>
    <PackageTags>PackSite library pipelining</PackageTags>
    <PackageProjectUrl>https://github.com/PackSite/Pipelining</PackageProjectUrl>
    <PackageReleaseNotes>https://github.com/PackSite/Pipelining/blob/main/CHANGELOG.md</PackageReleaseNotes>
    <PackageIcon>icon-64px.png</PackageIcon>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <Configurations>Debug;Release</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\img\icon-64px.png" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net5.0'">
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="[5.0,]" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="[5.0,]" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="[5.0,]" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="[5.0,]" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="[3.0,]" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="[3.0,]" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="[3.0,]" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="[3.0,]" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PackSite.Library.Pipelining.Abstractions\PackSite.Library.Pipelining.Abstractions.csproj" />
  </ItemGroup>

</Project>
